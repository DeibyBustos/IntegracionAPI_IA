{
  "compilerOptions": {
    // ⬇️ Entradas y salidas
    "rootDir": "src",
    "outDir": "dist",

    // ⬇️ Módulos/entorno Node ESM moderno
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",

    // ⬇️ Tipos y librerías
    "lib": ["ES2022"],
    "types": ["node"],

    // ⬇️ Calidad de vida
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,  // 👈 útil para librerías CJS
    "skipLibCheck": true,
    "resolveJsonModule": true,

    // ⬇️ Mapas y declaraciones
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "src",
    "src/types/**/*"   // 👈 añade esta línea
  ]
}
